<body class="flex flex-col items-center">
    <div class="text-center mt-24 mb-14 w-36
    md:w-40 md:mt-14">
        <%= image_tag('logo.png', alt: 'logo') %>
    </div>
    <div class="text-center">
        <p 
        class="text-3xl text-center mb-10
        md:text-4xl text-green-500">
        Gen. Tinio National High School
        </p>
    </div>
    <div class="flex flex-col items-center h-60
    md:h-72 md:w-[600px] md:rounded-lg md:bg-white-200 md:order-black-500  md:border-2">
        <form action="<%= teacher_log_path %>" method="POST">
            <h1 class="text-xl text-green-500 font-bold my-5 text-center
            ">
            Teacher Login
            </h1>

            <label for="email"
            class="text-green-500
            "> 
            Email:
            </label>
            <br>
            <input type="text" type="email" name="email" id="email" 
            class="
            " 
            required>
            <br>

            <label for="email"
            class="text-green-500
            "> 
            Password:
            </label>
            <br>
            <input type="password" type="password" name="password" id="password" 
            class="
            " 
            required>
            <br>
            <div class="flex justify-between">

            <%= link_to "Back", landing_path,
            class: "bg-green-500 border-[1px] border-solid border-black w-20 mt-4 text-center
            "%> 


            <input type="submit" value="Login" 
            class="bg-green-500 border-[1px] border-solid border-black w-20 mt-4
            ">

            <!-- CSRF token -->
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <!-- Add a hidden field for account type -->
            <input type="hidden" name="account_type" value="teacher">
            
            </div>
        </form>
    </div>
</body>


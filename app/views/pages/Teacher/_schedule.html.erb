<body class="">
    <%= render "pages/Teacher/header" %>
    <main class="flex">
        <nav id="menu" class="border-r-[1px] shadow-lg border-solid border-black-400 w-64 h-[90vh] hidden md:inline">
            <div class="text-gray-600 text-sm text-center p-3">MENU BAR --></div>
            <div class="font-semibold p-2 hover:bg-slate-100 hover:border-l-4 border-blue-500" aria-current="page"><%= link_to "Dashboard", teacher_dashboard_path %></div>
            <div class="font-semibold p-2 hover:bg-slate-100 hover:border-l-4 border-blue-500"><%= link_to "Announcement", teacher_announcement_path %> </div>
            <div class="font-semibold p-2 bg-slate-100 text-blue-500 border-l-4 border-blue-500"><%= link_to "Schedule", teacher_schedule_path %> </div>
            <div class="font-semibold p-2 hover:bg-slate-100 hover:border-l-4 border-blue-500"><%= link_to "Grades", teacher_grades_path %> </div>
            <div class="font-semibold p-2 hover:bg-slate-100 hover:border-l-4 border-blue-500"><%= link_to "Settings", teacher_settings_path %> </div>
        </nav>
        <div>
            <div class="border-[1px] border-solid  border-gray-200 bg-gray-100 text-gray-400 md:w-[83vw] w-[88vw] h-12 md:m-5 m-4 mb-7 rounded-lg flex items-center pl-2">ACCOUNT: <%= "#{current_person&.fname.upcase} #{current_person&.lname.upcase}"%></div>
                <div class="md:border-[1px] md:border-solid md:border-black-500 h-96 md:m-5 mx-4 text-center">
                    <div class="shadow-md border-2 border-black">
                        <p class="text-blue-500 text-bold text-xl shadow-md mb-6 
                        "
                        >TEACHER INFO
                        </p>
                    <div class="flex flex-col justify-center items-center">
                    <p class="text-bold text-left text-sm 
                    "
                    ><span class="text-md text-bold text-blue-500">NAME:</span> <%= "#{current_person.fname.upcase} #{current_person.lname.upcase}"%>
                    </p>

                    <br>
                    <p class="text-bold text-right text-sm 
                    "
                    ><span class="text-md text-blue-500 text-bold">ADVISORY:</span><% @advisor.each do |advisor| %> || <%= advisor.section_name %> <%= advisor.grade_lvl %> || <% end %>
                    </p>

                </div>

                    <br>
                    <p class="text-blue-500 text-bold text-xl shadow-md mb-6 
                    "
                    >TEACHER SCHEDULE
                    </p>

                <div class="flex justify-center mt-7 mb-10">
                    <table class="border border-solid border-black p-2">
                        <thead class="border border-solid border-black text-[14px] md:text-2xl text-blue-500">
                            <td class="border border-solid border-black">SUBJECT</td>
                            <td class="border border-solid border-black">SECTION</td>
                            <td class="border border-solid border-black">GRADE_LVL</td>
                            <td class="border border-solid border-black">TIME-IN</td>
                            <td class="border border-solid border-black">TIME-OUT</td>
                            <td class="border border-solid border-black">DAY-OF-WEEK</td>
                        </thead>
                       <% @schedule.each do |t|%>
                        <tbody class="border border-solid border-black text-[12px]">
                            <td class="border border-solid border-black"> <%= t.subject&.subject_name %> </td>
                            <td class="border border-solid border-black"><%= t.section&.section_name %></td>
                            <td class="border border-solid border-black"><%= t.section&.grade_lvl %></td>
                            <td class="border border-solid border-black"><%= t.schedule&.time_in %></td>
                            <td class="border border-solid border-black"><%= t.schedule&.time_out %></td>
                            <td class="border border-solid border-black"><%= t.schedule&.day_of_week %></td>
                        </tbody>
                         <% end %>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
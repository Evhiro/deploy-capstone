<body class="flex flex-col items-center font-serif">
    <div class="text-center mt-24 mb-14 w-36
    md:w-40 md:mt-14">
        <%= image_tag('logo.png', alt: 'logo') %>
    </div>
    <div class="text-center">
        <p 
        class="text-3xl text-center mb-10
        md:text-4xl text-black-500">
        Gen. Tinio National High School
        </p>
    </div>
    <div class="flex flex-col pt-6 gap-6 text-center">
        <%= link_to "Student", student_login_path,
        class: "shadow-sm border rounded-lg border-green-500 py-3 px-20 hover:text-green-500 hover:animate-pulse
        md:px-16 md:text-xl hover:dark:bg-green-200 transition duration-700"%>
    <%= link_to "Teacher", teacher_login_path,
        class: "shadow-sm border rounded-lg border-blue-500 py-3 px-12 hover:text-blue-500 hover:animate-pulse
        md:px-16 md:text-xl hover:dark:bg-blue-200 transition duration-700"%>
        <%= link_to "Admin", admin_login_path,
        class: "shadow-sm border rounded-lg border-red-500 py-3 px-12 hover:text-red-500 hover:animate-pulse
        md:px-16 md:text-xl hover:dark:bg-red-200 transition duration-700"%>
    </div>
</body>